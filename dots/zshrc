# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# aliases
alias l="ls"
alias la="ls -a"
alias lla="ls -lha"

alias -g L='|less'
alias s='screen -d -RR'
alias htop='sudo htop'
